# Server Configuration (SFTP destination)
SERVER_HOST=REMOVED
SERVER_SSH_PORT=22
SERVER_USER=ephrince
SERVER_PASSWORD=Ephrance@2026
DEST_PATH=/home/ephrince/Fortunate/arthur_test

# Local Paths
SRC_DIR=/home/pi/Arthur/streamline/test_files
ARCHIVE_DIR=/home/pi/Arthur/streamline/archives
LOG_DIR=/home/pi/Arthur/streamline/logs
METRICS_DIR=/home/pi/Arthur/streamline/metrics

# Device Configuration
DEVICE_ID=pi-zero-2w
WIFI_IFACE=wlan0
PPP_PROFILE=mobile

# GSM Configuration
GSM_PORT=/dev/serial0
GSM_BAUD=9600

# LoRa Configuration
LORA_PORT=/dev/ttyUSB0
