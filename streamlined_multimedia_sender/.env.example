# Copy this file to .env and customize for your environment

# Server Configuration (SFTP destination)
SERVER_HOST=
SERVER_SSH_PORT=22
SERVER_USER=ephrince
SERVER_PASSWORD=Ephrance@2026
DEST_PATH=/var/www/html/ademnea_website/public/arriving_hive_media

# Local Media Paths (matching original multimedia_capture structure)
IMAGE_DIR=/home/pi/Desktop/HiveMonitor2/multimedia_capture/multimedia/images/
VIDEO_DIR=/home/pi/Desktop/HiveMonitor2/multimedia_capture/multimedia/videos/
AUDIO_DIR=/home/pi/Desktop/HiveMonitor2/multimedia_capture/multimedia/audios/
PARAMETER_DIR=/home/pi/Desktop/HiveMonitor2/parameter_capture/sensor_data
VIBRATION_DIR=/home/pi/Desktop/HiveMonitor2/parameter_capture/vibration_sensor/fft_log

# Other Local Paths
ARCHIVE_DIR=/home/pi/Desktop/HiveMonitor2/streamlined_multimedia_sender/archives
LOG_DIR=/home/pi/Desktop/HiveMonitor2/streamlined_multimedia_sender/logs
METRICS_DIR=/home/pi/Desktop/HiveMonitor2/streamlined_multimedia_sender/metrics

# Device Configuration
DEVICE_ID=pi-zero-2w
WIFI_IFACE=wlan0
PPP_PROFILE=mobile

# GSM Configuration
GSM_PORT=/dev/serial0
GSM_BAUD=9600
GSM_QUERY_READ_DELAY=0.15
GSM_QUERY_TIMEOUT=2.0

# LoRa Configuration
LORA_PORT=/dev/ttyUSB0
LORA_BAUD=9600
LORA_MOCK_RSSI=80
LORA_MOCK_SNR=12
LORA_MOCK_TEMPERATURE=23.5
LORA_MAX_SEND_ATTEMPTS=3
LORA_RETRY_DELAY=3.0
LORA_INTER_CHUNK_DELAY=0.5

# Interface Selection Thresholds
THRESHOLD_WIFI=0.60
THRESHOLD_GSM=0.50
HYSTERESIS_DELTA=0.10
PING_SERVER=REMOVED

# Interface Scoring Weights (WiFi)
WIFI_RSSI_WEIGHT=0.35
WIFI_LATENCY_WEIGHT=0.25
WIFI_LOSS_WEIGHT=0.20
WIFI_TCP_WEIGHT=0.20

# Interface Scoring Weights (GSM)
GSM_CSQ_WEIGHT=0.35
GSM_CREG_WEIGHT=0.25
GSM_COPS_WEIGHT=0.20
GSM_TCP_WEIGHT=0.20

# Network Timeouts and Retry Configuration
SSH_CONNECTION_TIMEOUT=30
SSH_AUTH_TIMEOUT=15
WIFI_COMMAND_TIMEOUT=3
LORA_SERIAL_TIMEOUT=10
LORA_COMMAND_TIMEOUT=15.0
MAX_RETRIES=3
BASE_DELAY=1.0
WIFI_ACTIVATION_DELAY=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_BYTES=1048576
LOG_BACKUP_COUNT=3
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s